@import 'inputs.styl';

body
	background-color: #242c3e;

	.container
		padding-top 50px
		margin 0 auto
		width 100%
		max-width 800px

		h1
			color #fff
			margin-bottom 0

		.card-format
			display flex
			justify-content space-between

			.left
				flex-basis 68%
			.right
				flex-basis 29%

		.buttons-block
			display flex
			justify-content space-between
			flex-wrap wrap

			& > div
				flex-basis 30%
